{
  "displayName": "stac-server",
  "description": "A STAC API running on stac-server",
  "version": "1.1.0",
  "repository": "https://github.com/stac-utils/stac-server",
  "author": "Alireza Jazayeri, Matthew Hanson <matt.a.hanson@gmail.com>, Sean Harkins",
  "license": "MIT",
  "type": "module",
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "scripts": {
    "build": "./bin/build.sh",
    "lint": "eslint . --ext .js,.ts",
    "lint-js-fix": "eslint . --ext .js,.ts --fix",
    "check-openapi": "spectral lint src/lambdas/api/openapi.yaml --ruleset .spectral.yml",
    "test": "npm run test:unit",
    "test:coverage": "c8 npm run test:unit",
    "test:integration": "ava tests/integration/*.[tj]s",
    "test:system": "./bin/system-tests.sh",
    "test:unit": "ava tests/unit/*.[tj]s",
    "typecheck": "tsc",
    "audit-prod": "npx better-npm-audit audit --production",
    "deploy": "sls deploy",
    "package": "sls package",
    "serve": "REQUEST_LOGGING_FORMAT=dev LOG_LEVEL=debug STAC_API_URL=http://localhost:3000 ENABLE_TRANSACTIONS_EXTENSION=true nodemon --esm ./src/lambdas/api/local.ts",
    "build-api-docs": "npm run widdershins --search false --language_tabs 'nodejs:NodeJS' 'python:Python' --summary ./packages/api-lib/api-spec.yaml -o ./docs/api.md & npm run shins --inline --logo ./docs/images/logo.png -o ./docs/index.html ./docs/api.md",
    "pre-commit": "./node_modules/pre-commit/hook"
  },
  "pre-commit": {
    "silent": false,
    "run": [
      "lint",
      "typecheck",
      "check-openapi",
      "audit-prod",
      "test",
      "test:system",
      "build"
    ]
  },
  "ava": {
    "verbose": true,
    "require": [
      "ts-node/register"
    ],
    "timeout": "1m",
    "typescript": {
      "rewritePaths": {
        "test/": "dist/test/"
      },
      "compile": "tsc"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/stac-utils/stac-server/issues"
  },
  "dependencies": {
    "@acuris/aws-es-connection": "^1.1.0",
    "@aws-sdk/client-secrets-manager": "^3.321.1",
    "@elastic/elasticsearch": "^7.9.0",
    "@mapbox/extent": "^0.4.0",
    "@opensearch-project/opensearch": "^2.2.1",
    "aws-os-connection": "^0.2.0",
    "better-npm-audit": "^3.7.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "got": "^12.6.0",
    "http-errors": "^2.0.0",
    "lodash-es": "^4.17.21",
    "memorystream": "^0.3.1",
    "morgan": "^1.10.0",
    "p-filter": "^3.0.0",
    "serverless-http": "^3.2.0",
    "through2": "^4.0.2",
    "ts-loader": "^9.4.2",
    "winston": "^3.8.2",
    "xml2js": "0.5.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@ava/typescript": "^4.0.0",
    "@stoplight/spectral-cli": "^6.6.0",
    "@tsconfig/node16": "^1.0.3",
    "@types/aws-lambda": "^8.10.115",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/http-errors": "^2.0.1",
    "@types/luxon": "^3.3.0",
    "@types/memorystream": "^0.3.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^16.18.9",
    "@types/sinon": "^10.0.14",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "ava": "^5.2.0",
    "aws-event-mocks": "^0.0.0",
    "aws-sdk": "^2.1369.0",
    "aws-sdk-client-mock": "^2.1.1",
    "c8": "^7.13.0",
    "copy-webpack-plugin": "^11.0.0",
    "crypto-random-string": "^5.0.0",
    "eslint": "^8.39.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^44.2.4",
    "luxon": "^3.3.0",
    "nock": "^13.3.1",
    "nodemon": "^2.0.22",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.8",
    "prettier-eslint": "^15.0.1",
    "prettier-eslint-cli": "^7.1.0",
    "proxyquire": "^2.1.3",
    "serverless": "^3.30.1",
    "serverless-offline": "^12.0.4",
    "shins": "^2.6.0",
    "sinon": "^15.0.4",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.1.1",
    "widdershins": "^4.0.1",
    "zip-webpack-plugin": "^4.0.1"
  },
  "name": "stac-server"
}
